<Page x:Class="TestWPF.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница редактирования" Background="White">

    <Grid Margin="0, 50, 0, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Артикул -->
        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock Text="Артикул:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBox x:Name="ArticleTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
        </StackPanel>

        <!-- Наименование -->
        <StackPanel Grid.Column="0" Grid.Row="1">
            <TextBlock Text="Наименование:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBox x:Name="NameTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
        </StackPanel>

        <!-- Единица измерения -->
        <StackPanel Grid.Column="0" Grid.Row="2">
            <TextBlock Text="Единица измерения:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <ComboBox x:Name="MeasurementComboBox" Style="{StaticResource ComboBoxStyle}" 
                DisplayMemberPath="MeasurementName" SelectedValuePath="MeasurementID"/>
        </StackPanel>

        <!-- Цена -->
        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBlock Text="Цена:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBox x:Name="PriceTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
        </StackPanel>

        <!-- Максимальная скидка -->
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Максимальная скидка:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBox x:Name="MaxDiscountTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
        </StackPanel>

        <!-- Производитель -->
        <StackPanel Grid.Column="1" Grid.Row="2">
            <TextBlock Text="Производитель:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <ComboBox x:Name="ManufactureComboBox" Style="{StaticResource ComboBoxStyle}" 
                        DisplayMemberPath="ManufactureName" SelectedValuePath="ManufactureID"/>
        </StackPanel>

        <!-- Поставщик -->
        <StackPanel Grid.Column="2" Grid.Row="0">
            <TextBlock Text="Поставщик:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <ComboBox x:Name="SupplierComboBox" Style="{StaticResource ComboBoxStyle}" 
                        DisplayMemberPath="SupplierName" SelectedValuePath="SupplierID"/>
        </StackPanel>

        <!-- Категория -->
        <StackPanel Grid.Column="2" Grid.Row="1">
            <TextBlock Text="Категория:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <ComboBox x:Name="CategoryComboBox" Style="{StaticResource ComboBoxStyle}" 
              DisplayMemberPath="CategoryName" SelectedValuePath="CategoryID"/>
        </StackPanel>

        <!-- Скидка -->
        <StackPanel Grid.Column="2" Grid.Row="2">
            <TextBlock Text="Скидка:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBox x:Name="DiscountTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
        </StackPanel>

        <!-- Количество -->
        <StackPanel Grid.Column="3" Grid.Row="0">
            <TextBlock Text="Количество:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBox x:Name="QuantityTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
        </StackPanel>

        <!-- Описание -->
        <StackPanel Grid.Column="3" Grid.Row="1">
            <TextBlock Text="Описание:" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBox x:Name="DescriptionTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center">
            <Button Content="Назад" Style="{StaticResource ButtonStyle}" Click="Button_Click"></Button>
            <Button Content="Сохранить" Style="{StaticResource ButtonStyle}" Click="Button_Click_1" />
        </StackPanel>
    </Grid>
</Page>
